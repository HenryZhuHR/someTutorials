{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (using bash)",
            "type": "shell",
            "command": "make",
            "args": [
                "-j6"
            ],
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "rebuild (using bash)",
            "type": "shell",
            "command": "make clean && make -j6",
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "build and update",
            "type": "shell",
            "command": "openocd",
            "problemMatcher":[
                "$gcc"
            ],
            "group": "build"
        },

    ]
}